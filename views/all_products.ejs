<% include _layouts/header %>

<div class="row products">
    
    <% products.forEach(function(p){ %>
            <div class="col-xs-12 col-md-4 p">
                <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a>
                <h5><b><%= p.title %></b></h5>
                <h5>Ksh <%= parseFloat(p.price).toFixed(2) %></h5>
                <div class="btn-group mt-4">
                  <a class="vd btn-double" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
                </div>

            </div>
        <% }); %>
    
</div>

<% include _layouts/footer %>